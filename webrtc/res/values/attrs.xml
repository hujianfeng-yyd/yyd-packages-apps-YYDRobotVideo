<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="BorderWidth" format="integer" />
        <attr name="BorderColor" format="color" />
        <attr name="SelectedColor" format="color" />
    </declare-styleable>
    
    <declare-styleable name="HorizontalListView">
        <attr name="dividerWidth" format="dimension" />
        <attr name="android:divider" />
        <attr name="android:requiresFadingEdge" />
        <attr name="android:fadingEdgeLength" />
    </declare-styleable>
    
    <!-- 定义样式 : 旋转木马 -->
    <declare-styleable name="CarrouselLayout">
        <attr name="autoRotation" format="boolean" />
        <attr name="rotationTime" format="integer" />
        <attr name="r" format="dimension" />
        <attr name="rotateDirection">
            <enum name="clockwise" value="0" />
            <enum name="anticlockwise" value="1" />
        </attr>
    </declare-styleable>

</resources>